<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/grid_color_selector"
    android:orientation="vertical"
    android:id="@+id/GridItemFilmLlMain"
    android:padding="2dp">

    <ImageView
        android:id="@+id/GridItemFilmIvPoster"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/GridItemFilmTvTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text=""
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/GridItemFilmTvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/gray"/>

        <ImageView
            android:id="@+id/GridItemFilmIvStar"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_star" />


        <TextView
            android:id="@+id/GridItemFilmTvVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="10sp"
            android:text=""
            android:textColor="@color/countrate"/>
    </LinearLayout>

</LinearLayout>